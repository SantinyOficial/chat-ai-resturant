/* üé® ESTILOS OPTIMIZADOS PARA COMPONENTE DE PAGO */

// Variables CSS
:host {
  --primary-color: #FFCC29;
  --secondary-color: #FF6B6B;
  --accent-color: #4ECDC4;
  --success-color: #4CAF50;
  --error-color: #F44336;
  --warning-color: #FF9800;
  --background-dark: #1A1A1A;
  --background-medium: #2D2D2D;
  --background-light: #3A3A3A;
  --text-primary: #FFFFFF;
  --text-secondary: #B0B0B0;
  --border-color: #444444;
  --glow-primary: rgba(255, 204, 41, 0.4);
}

// ========================================
// CONTENEDOR PRINCIPAL
// ========================================

.pago-container {
  position: relative;
  background: linear-gradient(135deg, var(--background-medium), var(--background-dark));
  border-radius: 24px;
  padding: 32px;
  margin: 16px 0;
  border: 2px solid transparent;
  overflow: hidden;
  min-height: 400px;
  box-shadow:
    0 20px 40px rgba(0, 0, 0, 0.3),
    0 0 0 1px rgba(255, 255, 255, 0.1),
    inset 0 1px 0 rgba(255, 255, 255, 0.1);

  // Estados del contenedor
  &.estado-PENDIENTE_PAGO {
    border-color: var(--warning-color);
    background: linear-gradient(135deg, var(--background-medium), rgba(255, 152, 0, 0.05));
  }

  &.estado-PROCESANDO_PAGO {
    border-color: var(--primary-color);
    background: linear-gradient(135deg, var(--background-medium), rgba(255, 204, 41, 0.1));
    animation: processing-glow 3s ease-in-out infinite;
  }

  &.estado-PAGO_REALIZADO {
    border-color: var(--success-color);
    background: linear-gradient(135deg, var(--background-medium), rgba(76, 175, 80, 0.1));
    animation: success-pulse 2s ease-in-out;
  }

  &.estado-PAGO_FALLIDO {
    border-color: var(--error-color);
    background: linear-gradient(135deg, var(--background-medium), rgba(244, 67, 54, 0.1));
    animation: error-shake 0.8s ease-in-out;
  }
}

// ========================================
// CANVAS DE PART√çCULAS
// ========================================

.particles-canvas {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  pointer-events: none;
  z-index: 1;
  border-radius: 24px;
  opacity: 0.7;
}

// ========================================
// FONDO HOLOGR√ÅFICO
// ========================================

.holographic-background {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  pointer-events: none;
  z-index: 2;
  opacity: 0;
  transition: opacity 0.5s ease;

  &.active {
    opacity: 1;
  }

  .holo-layer {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    border-radius: 24px;

    &.layer-1 {
      background: linear-gradient(45deg, transparent, rgba(255, 204, 41, 0.1), transparent);
      animation: holo-sweep-1 4s ease-in-out infinite;
    }

    &.layer-2 {
      background: linear-gradient(-45deg, transparent, rgba(255, 107, 107, 0.1), transparent);
      animation: holo-sweep-2 5s ease-in-out infinite 1s;
    }

    &.layer-3 {
      background: linear-gradient(90deg, transparent, rgba(78, 205, 196, 0.1), transparent);
      animation: holo-sweep-3 6s ease-in-out infinite 2s;
    }
  }
}

// ========================================
// HEADER DEL PAGO
// ========================================

.pago-header {
  text-align: center;
  margin-bottom: 32px;
  position: relative;
  z-index: 10;

  .amount-display {
    display: flex;
    justify-content: center;
    align-items: baseline;
    margin-bottom: 16px;
    font-family: 'Arial', monospace;

    .currency-symbol {
      font-size: 2rem;
      color: var(--primary-color);
      margin-right: 8px;
    }

    .amount-value {
      font-size: 3.5rem;
      font-weight: 800;
      color: var(--text-primary);
      text-shadow: 0 0 20px rgba(255, 204, 41, 0.5);
      animation: amount-glow 2s ease-in-out infinite;
    }

    .currency-label {
      font-size: 1.2rem;
      color: var(--text-secondary);
      margin-left: 8px;
    }
  }

  .payment-info {
    h2 {
      color: var(--text-primary);
      font-size: 1.8rem;
      margin-bottom: 8px;
      font-weight: 600;
    }

    p {
      color: var(--text-secondary);
      font-size: 1rem;
      margin: 0;
    }
  }
}

// ========================================
// GRID DE M√âTODOS DE PAGO
// ========================================

.metodos-pago-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
  gap: 20px;
  margin-bottom: 32px;
  position: relative;
  z-index: 10;
}

.metodo-card {
  position: relative;
  background: linear-gradient(135deg, var(--background-light), var(--background-medium));
  border: 2px solid var(--border-color);
  border-radius: 16px;
  padding: 20px;
  cursor: pointer;
  transition: all 0.3s cubic-bezier(0.25, 0.46, 0.45, 0.94);
  overflow: hidden;

  &:hover {
    transform: translateY(-4px);
    border-color: var(--primary-color);
    box-shadow:
      0 15px 30px rgba(0, 0, 0, 0.3),
      0 0 30px var(--glow-primary);
  }

  &.selected {
    border-color: var(--primary-color);
    background: linear-gradient(135deg, rgba(255, 204, 41, 0.1), var(--background-medium));
    transform: translateY(-2px) scale(1.02);
    box-shadow:
      0 20px 40px rgba(0, 0, 0, 0.4),
      0 0 40px var(--glow-primary);

    .card-glow {
      opacity: 1;
    }

    .metodo-icon {
      transform: scale(1.2);
      filter: drop-shadow(0 0 20px var(--primary-color));
    }
  }

  &.disabled {
    opacity: 0.5;
    cursor: not-allowed;
    filter: grayscale(1);
  }

  .card-glow {
    position: absolute;
    top: -2px;
    left: -2px;
    right: -2px;
    bottom: -2px;
    background: linear-gradient(45deg, var(--primary-color), var(--secondary-color), var(--accent-color));
    border-radius: 18px;
    z-index: -1;
    opacity: 0;
    transition: opacity 0.3s ease;
    animation: glow-rotate 3s linear infinite;
  }

  .metodo-content {
    display: flex;
    align-items: center;
    gap: 16px;
    position: relative;
    z-index: 2;

    .metodo-icon {
      font-size: 2.5rem;
      transition: all 0.3s ease;
      flex-shrink: 0;
    }

    .metodo-info {
      flex: 1;

      h3 {
        color: var(--text-primary);
        font-size: 1.2rem;
        margin: 0 0 4px 0;
        font-weight: 600;
      }

      p {
        color: var(--text-secondary);
        font-size: 0.9rem;
        margin: 0;
        line-height: 1.4;
      }
    }

    .metodo-indicator {
      .radio-custom {
        width: 24px;
        height: 24px;
        border: 2px solid var(--border-color);
        border-radius: 50%;
        position: relative;
        transition: all 0.3s ease;

        &.checked {
          border-color: var(--primary-color);
          background: radial-gradient(circle, var(--primary-color), transparent);

          .radio-dot {
            opacity: 1;
            transform: scale(1);
          }
        }

        .radio-dot {
          position: absolute;
          top: 50%;
          left: 50%;
          width: 10px;
          height: 10px;
          background: var(--primary-color);
          border-radius: 50%;
          transform: translate(-50%, -50%) scale(0);
          opacity: 0;
          transition: all 0.3s ease;
          box-shadow: 0 0 10px var(--primary-color);
        }
      }
    }
  }

  .selection-effects {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    pointer-events: none;

    .ripple-effect,
    .pulse-ring {
      position: absolute;
      top: 50%;
      left: 50%;
      transform: translate(-50%, -50%);
      border-radius: 50%;
      opacity: 0;
    }

    .ripple-effect {
      width: 0;
      height: 0;
      background: radial-gradient(circle, var(--primary-color), transparent);
    }

    .pulse-ring {
      width: 100px;
      height: 100px;
      border: 2px solid var(--primary-color);
    }
  }
}

// ========================================
// FORMULARIOS DE DATOS
// ========================================

.formulario-datos {
  background: linear-gradient(135deg, var(--background-light), var(--background-medium));
  border-radius: 16px;
  padding: 24px;
  margin-bottom: 24px;
  border: 1px solid var(--border-color);
  position: relative;
  z-index: 10;
  animation: slideInUp 0.5s ease-out;

  h3 {
    color: var(--text-primary);
    font-size: 1.4rem;
    margin-bottom: 20px;
    text-align: center;
    font-weight: 600;
  }

  .form-grid {
    display: flex;
    flex-direction: column;
    gap: 20px;
  }

  .input-row {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 16px;
  }

  .input-group {
    position: relative;

    label {
      display: block;
      color: var(--text-secondary);
      font-size: 0.9rem;
      margin-bottom: 8px;
      font-weight: 500;
    }

    input,
    select {
      width: 100%;
      background: var(--background-dark);
      border: 2px solid var(--border-color);
      border-radius: 8px;
      padding: 12px 16px;
      color: var(--text-primary);
      font-size: 1rem;
      transition: all 0.3s ease;
      box-sizing: border-box;

      &:focus {
        outline: none;
        border-color: var(--primary-color);
        box-shadow: 0 0 20px rgba(255, 204, 41, 0.3);
        transform: translateY(-2px);
      }

      &::placeholder {
        color: var(--text-secondary);
        opacity: 0.7;
      }
    }

    .input-underline {
      position: absolute;
      bottom: 0;
      left: 0;
      right: 0;
      height: 2px;
      background: linear-gradient(90deg, var(--primary-color), var(--secondary-color));
      transform: scaleX(0);
      transition: transform 0.3s ease;
      border-radius: 1px;
    }

    input:focus + .input-underline,
    select:focus + .input-underline {
      transform: scaleX(1);
    }
  }

  .input-card-number {
    font-family: 'Courier New', monospace;
    letter-spacing: 2px;
  }
}

// ========================================
// BOTONES DE ACCI√ìN
// ========================================

.action-buttons {
  display: flex;
  gap: 16px;
  align-items: center;
  justify-content: center;
  position: relative;
  z-index: 10;

  .btn-procesar-pago {
    position: relative;
    background: linear-gradient(135deg, var(--primary-color), var(--secondary-color));
    border: none;
    border-radius: 12px;
    padding: 16px 32px;
    color: var(--background-dark);
    font-weight: 700;
    font-size: 1.1rem;
    cursor: pointer;
    transition: all 0.3s ease;
    overflow: hidden;
    flex: 1;
    max-width: 400px;

    &:hover:not(:disabled) {
      transform: translateY(-2px);
      box-shadow: 0 15px 30px rgba(255, 204, 41, 0.4);
    }

    &:active:not(:disabled) {
      transform: translateY(0);
    }

    &:disabled {
      opacity: 0.5;
      cursor: not-allowed;
      filter: grayscale(1);
    }

    .btn-content {
      display: flex;
      align-items: center;
      justify-content: center;
      gap: 12px;
      position: relative;
      z-index: 2;

      .btn-icon {
        font-size: 1.2rem;
      }

      .btn-text {
        font-weight: 700;
      }

      .btn-amount {
        font-weight: 800;
        font-size: 1.2rem;
      }
    }

    .btn-background {
      position: absolute;
      top: 0;
      left: -100%;
      width: 100%;
      height: 100%;
      background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
      transition: left 0.6s ease;
    }

    &:hover .btn-background {
      left: 100%;
    }

    .btn-particles {
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      bottom: 0;
      pointer-events: none;

      &::before,
      &::after {
        content: '';
        position: absolute;
        width: 4px;
        height: 4px;
        background: rgba(255, 255, 255, 0.8);
        border-radius: 50%;
        animation: btn-sparkle 2s ease-in-out infinite;
      }

      &::before {
        top: 20%;
        left: 20%;
        animation-delay: 0s;
      }

      &::after {
        bottom: 20%;
        right: 20%;
        animation-delay: 1s;
      }
    }
  }

  .btn-sound-toggle {
    background: var(--background-light);
    border: 2px solid var(--border-color);
    border-radius: 8px;
    padding: 12px;
    color: var(--text-primary);
    cursor: pointer;
    font-size: 1.2rem;
    transition: all 0.3s ease;

    &:hover {
      border-color: var(--primary-color);
      background: var(--background-medium);
    }
  }
}

// ========================================
// ESTADO: PROCESANDO PAGO
// ========================================

.pago-procesando {
  text-align: center;
  position: relative;
  z-index: 10;
  padding: 40px 20px;

  .processing-background-effects {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    pointer-events: none;
    z-index: 1;

    .concentric-waves {
      position: absolute;
      top: 50%;
      left: 50%;
      transform: translate(-50%, -50%);

      .wave {
        position: absolute;
        border: 2px solid var(--primary-color);
        border-radius: 50%;
        opacity: 0.6;

        &.wave-1 {
          width: 100px;
          height: 100px;
          margin: -50px 0 0 -50px;
          animation: concentric-pulse 3s ease-out infinite;
        }

        &.wave-2 {
          width: 150px;
          height: 150px;
          margin: -75px 0 0 -75px;
          animation: concentric-pulse 3s ease-out infinite 0.5s;
        }

        &.wave-3 {
          width: 200px;
          height: 200px;
          margin: -100px 0 0 -100px;
          animation: concentric-pulse 3s ease-out infinite 1s;
        }

        &.wave-4 {
          width: 250px;
          height: 250px;
          margin: -125px 0 0 -125px;
          animation: concentric-pulse 3s ease-out infinite 1.5s;
        }
      }
    }

    .orbital-particles {
      position: absolute;
      top: 50%;
      left: 50%;
      transform: translate(-50%, -50%);

      .particle {
        position: absolute;
        width: 6px;
        height: 6px;
        background: var(--primary-color);
        border-radius: 50%;
        box-shadow: 0 0 10px var(--primary-color);

        &.orbit-1 {
          animation: orbit-1 4s linear infinite;
        }

        &.orbit-2 {
          animation: orbit-2 3s linear infinite;
        }

        &.orbit-3 {
          animation: orbit-3 2s linear infinite;
        }
      }
    }
  }

  .main-spinner-container {
    position: relative;
    width: 120px;
    height: 120px;
    margin: 0 auto 32px auto;
    z-index: 2;

    .spinner-ring {
      position: absolute;
      top: 50%;
      left: 50%;
      border-radius: 50%;
      border: 4px solid transparent;

      &.ring-outer {
        width: 120px;
        height: 120px;
        margin: -60px 0 0 -60px;
        border-top-color: var(--primary-color);
        border-right-color: var(--primary-color);
        animation: spin-clockwise 2s linear infinite;
      }

      &.ring-middle {
        width: 90px;
        height: 90px;
        margin: -45px 0 0 -45px;
        border-bottom-color: var(--secondary-color);
        border-left-color: var(--secondary-color);
        animation: spin-counter-clockwise 1.5s linear infinite;
      }

      &.ring-inner {
        width: 60px;
        height: 60px;
        margin: -30px 0 0 -30px;
        border-top-color: var(--accent-color);
        border-right-color: var(--accent-color);
        animation: spin-clockwise 1s linear infinite;
      }
    }

    .center-icon {
      position: absolute;
      top: 50%;
      left: 50%;
      transform: translate(-50%, -50%);
      z-index: 3;

      .processing-icon {
        font-size: 2rem;
        animation: icon-pulse 2s ease-in-out infinite;
      }
    }

    .progress-circle-svg {
      position: absolute;
      top: 0;
      left: 0;
      width: 120px;
      height: 120px;
      transform: rotate(-90deg);

      .progress-track {
        fill: none;
        stroke: var(--border-color);
        stroke-width: 3;
      }

      .progress-bar {
        fill: none;
        stroke: var(--primary-color);
        stroke-width: 4;
        stroke-linecap: round;
        stroke-dasharray: 283;
        transition: stroke-dashoffset 0.3s ease;
        filter: drop-shadow(0 0 10px var(--primary-color));
      }
    }
  }

  .progress-info {
    z-index: 2;
    position: relative;

    .processing-title {
      color: var(--text-primary);
      font-size: 1.6rem;
      margin-bottom: 16px;
      font-weight: 600;
    }

    .progress-percentage {
      font-size: 2.5rem;
      font-weight: 800;
      color: var(--primary-color);
      margin-bottom: 16px;
      text-shadow: 0 0 20px var(--primary-color);
      animation: percentage-glow 2s ease-in-out infinite;
    }

    .dynamic-message {
      color: var(--text-secondary);
      font-size: 1rem;
      margin-bottom: 24px;
      min-height: 24px;
      animation: message-fade 0.5s ease-in-out;
    }

    .phase-progress {
      display: flex;
      justify-content: center;
      gap: 16px;
      flex-wrap: wrap;
      margin-bottom: 24px;

      .phase-item {
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 8px;
        opacity: 0.5;
        transition: all 0.3s ease;

        &.active {
          opacity: 1;
          transform: scale(1.1);

          .phase-dot {
            background: var(--primary-color);
            box-shadow: 0 0 20px var(--primary-color);
            animation: phase-pulse 1s ease-in-out infinite;
          }
        }

        &.completed {
          opacity: 1;

          .phase-dot {
            background: var(--success-color);
            box-shadow: 0 0 15px var(--success-color);
          }
        }

        .phase-dot {
          width: 12px;
          height: 12px;
          background: var(--border-color);
          border-radius: 50%;
          transition: all 0.3s ease;
        }

        span {
          color: var(--text-secondary);
          font-size: 0.8rem;
          font-weight: 500;
        }
      }
    }
  }

  .security-info {
    margin-top: 24px;

    .security-badges {
      display: flex;
      justify-content: center;
      gap: 12px;
      margin-bottom: 12px;
      flex-wrap: wrap;

      .badge {
        background: var(--background-light);
        color: var(--text-primary);
        padding: 6px 12px;
        border-radius: 20px;
        font-size: 0.8rem;
        border: 1px solid var(--border-color);
      }
    }

    p {
      color: var(--text-secondary);
      font-size: 0.9rem;
      margin: 0;
      opacity: 0.8;
    }
  }
}

// ========================================
// ESTADO: PAGO EXITOSO
// ========================================

.pago-exitoso {
  text-align: center;
  position: relative;
  z-index: 10;
  padding: 40px 20px;

  .confetti-container {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    pointer-events: none;
    z-index: 1;

    .confetti {
      position: absolute;
      width: 8px;
      height: 8px;
      background: var(--primary-color);
      animation: confetti-fall 3s ease-out infinite;

      &:nth-child(odd) {
        background: var(--secondary-color);
      }

      &:nth-child(3n) {
        background: var(--accent-color);
      }

      @for $i from 1 through 15 {
        &:nth-child(#{$i}) {
          left: #{$i * 6.67%};
          animation-delay: #{$i * 0.1s};
          animation-duration: #{2 + ($i * 0.1)}s;
        }
      }
    }
  }

  .success-icon-container {
    position: relative;
    margin: 0 auto 32px auto;
    width: 120px;
    height: 120px;

    .success-rings {
      position: absolute;
      top: 50%;
      left: 50%;
      transform: translate(-50%, -50%);

      .ring {
        position: absolute;
        border: 3px solid var(--success-color);
        border-radius: 50%;
        opacity: 0.6;

        &.ring-1 {
          width: 120px;
          height: 120px;
          margin: -60px 0 0 -60px;
          animation: success-ring-1 2s ease-out infinite;
        }

        &.ring-2 {
          width: 90px;
          height: 90px;
          margin: -45px 0 0 -45px;
          animation: success-ring-2 2s ease-out infinite 0.3s;
        }

        &.ring-3 {
          width: 60px;
          height: 60px;
          margin: -30px 0 0 -30px;
          animation: success-ring-3 2s ease-out infinite 0.6s;
        }
      }
    }

    .success-icon {
      position: absolute;
      top: 50%;
      left: 50%;
      transform: translate(-50%, -50%);
      z-index: 2;

      span {
        font-size: 3rem;
        animation: success-bounce 1s ease-out;
        display: block;
        filter: drop-shadow(0 0 20px var(--success-color));
      }
    }
  }

  .success-message {
    margin-bottom: 32px;

    h2 {
      color: var(--text-primary);
      font-size: 1.8rem;
      margin-bottom: 12px;
      font-weight: 700;
    }

    p {
      color: var(--text-secondary);
      font-size: 1rem;
      margin-bottom: 24px;
    }

    .transaction-details {
      background: var(--background-light);
      border-radius: 12px;
      padding: 20px;
      border: 1px solid var(--border-color);

      .detail-item {
        display: flex;
        justify-content: space-between;
        margin-bottom: 12px;

        &:last-child {
          margin-bottom: 0;
        }

        .label {
          color: var(--text-secondary);
          font-weight: 500;
        }

        .value {
          color: var(--text-primary);
          font-weight: 600;
        }
      }
    }
  }

  .celebration-effects {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    pointer-events: none;
    z-index: 1;

    .sparkle {
      position: absolute;
      width: 4px;
      height: 4px;
      background: var(--primary-color);
      border-radius: 50%;
      animation: sparkle-twinkle 2s ease-in-out infinite;      @for $i from 1 through 6 {
        &:nth-child(#{$i}) {
          top: #{10% + ($i * 15%)};
          left: #{5% + ($i * 15%)};
          animation-delay: #{$i * 0.3}s;
        }
      }
    }
  }
}

// ========================================
// ESTADO: PAGO FALLIDO
// ========================================

.pago-fallido {
  text-align: center;
  position: relative;
  z-index: 10;
  padding: 40px 20px;

  .error-icon-container {
    position: relative;
    margin: 0 auto 32px auto;
    width: 120px;
    height: 120px;

    .error-pulse {
      position: absolute;
      top: 50%;
      left: 50%;
      transform: translate(-50%, -50%);
      width: 120px;
      height: 120px;
      border: 3px solid var(--error-color);
      border-radius: 50%;
      animation: error-pulse-ring 2s ease-out infinite;
    }

    .error-icon {
      position: absolute;
      top: 50%;
      left: 50%;
      transform: translate(-50%, -50%);
      z-index: 2;

      span {
        font-size: 3rem;
        animation: error-wobble 1s ease-out;
        display: block;
        filter: drop-shadow(0 0 20px var(--error-color));
      }
    }
  }

  .error-message {
    margin-bottom: 32px;

    h2 {
      color: var(--text-primary);
      font-size: 1.8rem;
      margin-bottom: 12px;
      font-weight: 700;
    }

    p {
      color: var(--text-secondary);
      font-size: 1rem;
      margin-bottom: 16px;
    }

    .error-details {
      background: rgba(244, 67, 54, 0.1);
      border: 1px solid var(--error-color);
      border-radius: 8px;
      padding: 16px;

      p {
        color: var(--error-color);
        margin: 0;
        font-weight: 500;
      }
    }
  }

  .retry-actions {
    .btn-retry {
      background: linear-gradient(135deg, var(--error-color), #d32f2f);
      border: none;
      border-radius: 8px;
      padding: 12px 24px;
      color: white;
      font-weight: 600;
      cursor: pointer;
      transition: all 0.3s ease;

      &:hover {
        transform: translateY(-2px);
        box-shadow: 0 10px 20px rgba(244, 67, 54, 0.3);
      }
    }
  }
}

// ========================================
// ANIMACIONES KEYFRAMES
// ========================================

@keyframes processing-glow {
  0%, 100% {
    box-shadow:
      0 20px 40px rgba(0, 0, 0, 0.3),
      0 0 0 1px rgba(255, 255, 255, 0.1),
      inset 0 1px 0 rgba(255, 255, 255, 0.1);
  }
  50% {
    box-shadow:
      0 20px 40px rgba(0, 0, 0, 0.3),
      0 0 30px var(--glow-primary),
      0 0 0 1px rgba(255, 204, 41, 0.3),
      inset 0 1px 0 rgba(255, 255, 255, 0.1);
  }
}

@keyframes success-pulse {
  0% {
    transform: scale(1);
  }
  50% {
    transform: scale(1.02);
  }
  100% {
    transform: scale(1);
  }
}

@keyframes error-shake {
  0%, 100% { transform: translateX(0); }
  10%, 30%, 50%, 70%, 90% { transform: translateX(-4px); }
  20%, 40%, 60%, 80% { transform: translateX(4px); }
}

@keyframes amount-glow {
  0%, 100% {
    text-shadow: 0 0 20px rgba(255, 204, 41, 0.5);
  }
  50% {
    text-shadow: 0 0 30px rgba(255, 204, 41, 0.8);
  }
}

@keyframes glow-rotate {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

@keyframes slideInUp {
  0% {
    opacity: 0;
    transform: translateY(30px);
  }
  100% {
    opacity: 1;
    transform: translateY(0);
  }
}

@keyframes btn-sparkle {
  0%, 100% {
    opacity: 0;
    transform: scale(0);
  }
  50% {
    opacity: 1;
    transform: scale(1);
  }
}

@keyframes holo-sweep-1 {
  0% { transform: translateX(-100%) skewX(-15deg); }
  100% { transform: translateX(200%) skewX(-15deg); }
}

@keyframes holo-sweep-2 {
  0% { transform: translateX(-100%) skewX(15deg); }
  100% { transform: translateX(200%) skewX(15deg); }
}

@keyframes holo-sweep-3 {
  0% { transform: translateY(-100%) skewY(-15deg); }
  100% { transform: translateY(200%) skewY(-15deg); }
}

@keyframes concentric-pulse {
  0% {
    transform: scale(0.5);
    opacity: 0.8;
  }
  100% {
    transform: scale(2);
    opacity: 0;
  }
}

@keyframes orbit-1 {
  0% { transform: rotate(0deg) translateX(60px) rotate(0deg); }
  100% { transform: rotate(360deg) translateX(60px) rotate(-360deg); }
}

@keyframes orbit-2 {
  0% { transform: rotate(0deg) translateX(45px) rotate(0deg); }
  100% { transform: rotate(360deg) translateX(45px) rotate(-360deg); }
}

@keyframes orbit-3 {
  0% { transform: rotate(0deg) translateX(30px) rotate(0deg); }
  100% { transform: rotate(360deg) translateX(30px) rotate(-360deg); }
}

@keyframes spin-clockwise {
  0% { transform: translate(-50%, -50%) rotate(0deg); }
  100% { transform: translate(-50%, -50%) rotate(360deg); }
}

@keyframes spin-counter-clockwise {
  0% { transform: translate(-50%, -50%) rotate(0deg); }
  100% { transform: translate(-50%, -50%) rotate(-360deg); }
}

@keyframes icon-pulse {
  0%, 100% {
    transform: translate(-50%, -50%) scale(1);
  }
  50% {
    transform: translate(-50%, -50%) scale(1.1);
  }
}

@keyframes percentage-glow {
  0%, 100% {
    text-shadow: 0 0 20px var(--primary-color);
  }
  50% {
    text-shadow: 0 0 30px var(--primary-color);
  }
}

@keyframes message-fade {
  0% {
    opacity: 0;
    transform: translateY(10px);
  }
  100% {
    opacity: 1;
    transform: translateY(0);
  }
}

@keyframes phase-pulse {
  0%, 100% {
    transform: scale(1);
  }
  50% {
    transform: scale(1.2);
  }
}

@keyframes confetti-fall {
  0% {
    transform: translateY(-100vh) rotate(0deg);
    opacity: 1;
  }
  100% {
    transform: translateY(100vh) rotate(720deg);
    opacity: 0;
  }
}

@keyframes success-ring-1 {
  0% {
    transform: translate(-50%, -50%) scale(0.5);
    opacity: 0.8;
  }
  100% {
    transform: translate(-50%, -50%) scale(1.5);
    opacity: 0;
  }
}

@keyframes success-ring-2 {
  0% {
    transform: translate(-50%, -50%) scale(0.5);
    opacity: 0.6;
  }
  100% {
    transform: translate(-50%, -50%) scale(1.3);
    opacity: 0;
  }
}

@keyframes success-ring-3 {
  0% {
    transform: translate(-50%, -50%) scale(0.5);
    opacity: 0.4;
  }
  100% {
    transform: translate(-50%, -50%) scale(1.1);
    opacity: 0;
  }
}

@keyframes success-bounce {
  0% {
    transform: translate(-50%, -50%) scale(0);
  }
  50% {
    transform: translate(-50%, -50%) scale(1.2);
  }
  100% {
    transform: translate(-50%, -50%) scale(1);
  }
}

@keyframes error-pulse-ring {
  0% {
    transform: translate(-50%, -50%) scale(0.8);
    opacity: 0.8;
  }
  100% {
    transform: translate(-50%, -50%) scale(1.5);
    opacity: 0;
  }
}

@keyframes error-wobble {
  0% { transform: translate(-50%, -50%) rotate(0deg); }
  25% { transform: translate(-50%, -50%) rotate(-5deg); }
  75% { transform: translate(-50%, -50%) rotate(5deg); }
  100% { transform: translate(-50%, -50%) rotate(0deg); }
}

@keyframes sparkle-twinkle {
  0%, 100% {
    opacity: 0;
    transform: scale(0);
  }
  50% {
    opacity: 1;
    transform: scale(1);
  }
}

// ========================================
// EFECTOS ESPECIALES DE CLASE
// ========================================

.efecto-pulse {
  animation: efecto-pulse 0.6s ease-out !important;
}

.efecto-glow {
  animation: efecto-glow 0.8s ease-out !important;
}

.efecto-shimmer {
  animation: efecto-shimmer 1s ease-out !important;
}

.efecto-rotate3d {
  animation: efecto-rotate3d 0.8s ease-out !important;
}

.efecto-bounce {
  animation: efecto-bounce 0.6s ease-out !important;
}

.efecto-wave {
  animation: efecto-wave 1s ease-out !important;
}

.efecto-slide {
  animation: efecto-slide 0.5s ease-out !important;
}

.efecto-fade {
  animation: efecto-fade 0.7s ease-out !important;
}

.efecto-zoom {
  animation: efecto-zoom 0.5s ease-out !important;
}

.efecto-sparkle {
  animation: efecto-sparkle 1.2s ease-out !important;
}

.confetti-explosion {
  animation: confetti-explosion 3s ease-out !important;
}

.shake-error {
  animation: shake-error 0.8s ease-out !important;
}

@keyframes efecto-pulse {
  0% { transform: scale(1); }
  50% { transform: scale(1.05); }
  100% { transform: scale(1); }
}

@keyframes efecto-glow {
  0% { box-shadow: 0 0 5px var(--primary-color); }
  50% { box-shadow: 0 0 25px var(--primary-color); }
  100% { box-shadow: 0 0 5px var(--primary-color); }
}

@keyframes efecto-shimmer {
  0% { background-position: -200% center; }
  100% { background-position: 200% center; }
}

@keyframes efecto-rotate3d {
  0% { transform: perspective(400px) rotateY(0deg); }
  100% { transform: perspective(400px) rotateY(360deg); }
}

@keyframes efecto-bounce {
  0%, 100% { transform: translateY(0); }
  50% { transform: translateY(-10px); }
}

@keyframes efecto-wave {
  0% { transform: rotate(0deg); }
  25% { transform: rotate(5deg); }
  75% { transform: rotate(-5deg); }
  100% { transform: rotate(0deg); }
}

@keyframes efecto-slide {
  0% { transform: translateX(-20px); opacity: 0; }
  100% { transform: translateX(0); opacity: 1; }
}

@keyframes efecto-fade {
  0% { opacity: 0.5; }
  50% { opacity: 1; }
  100% { opacity: 0.5; }
}

@keyframes efecto-zoom {
  0% { transform: scale(1); }
  50% { transform: scale(1.1); }
  100% { transform: scale(1); }
}

@keyframes efecto-sparkle {
  0%, 100% { filter: brightness(1); }
  50% { filter: brightness(1.5) contrast(1.2); }
}

@keyframes confetti-explosion {
  0% { transform: scale(1); }
  10% { transform: scale(1.1); }
  100% { transform: scale(1); }
}

@keyframes shake-error {
  0%, 100% { transform: translateX(0); }
  10%, 30%, 50%, 70%, 90% { transform: translateX(-8px); }
  20%, 40%, 60%, 80% { transform: translateX(8px); }
}

// ========================================
// RESPONSIVE DESIGN
// ========================================

@media (max-width: 768px) {
  .pago-container {
    padding: 24px 16px;
    margin: 12px 0;
  }

  .pago-header {
    .amount-display {
      .amount-value {
        font-size: 2.5rem;
      }
    }

    .payment-info h2 {
      font-size: 1.4rem;
    }
  }

  .metodos-pago-grid {
    grid-template-columns: 1fr;
    gap: 16px;
  }

  .metodo-card {
    padding: 16px;

    .metodo-content {
      gap: 12px;

      .metodo-icon {
        font-size: 2rem;
      }

      .metodo-info h3 {
        font-size: 1.1rem;
      }
    }
  }

  .formulario-datos {
    padding: 20px 16px;

    .input-row {
      grid-template-columns: 1fr;
      gap: 12px;
    }
  }

  .action-buttons {
    flex-direction: column;
    gap: 12px;

    .btn-procesar-pago {
      max-width: none;
      width: 100%;
    }
  }

  .main-spinner-container {
    width: 100px;
    height: 100px;

    .spinner-ring {
      &.ring-outer {
        width: 100px;
        height: 100px;
        margin: -50px 0 0 -50px;
      }

      &.ring-middle {
        width: 75px;
        height: 75px;
        margin: -37.5px 0 0 -37.5px;
      }

      &.ring-inner {
        width: 50px;
        height: 50px;
        margin: -25px 0 0 -25px;
      }
    }

    .progress-circle-svg {
      width: 100px;
      height: 100px;
    }
  }

  .phase-progress {
    gap: 8px;

    .phase-item span {
      font-size: 0.7rem;
    }
  }
}

@media (max-width: 480px) {
  .pago-container {
    padding: 20px 12px;
    border-radius: 16px;
  }

  .pago-header {
    margin-bottom: 24px;

    .amount-display {
      .amount-value {
        font-size: 2rem;
      }

      .currency-symbol {
        font-size: 1.5rem;
      }
    }
  }

  .metodo-card {
    .metodo-content {
      .metodo-icon {
        font-size: 1.8rem;
      }

      .metodo-info {
        h3 {
          font-size: 1rem;
        }

        p {
          font-size: 0.8rem;
        }
      }
    }
  }

  .formulario-datos {
    padding: 16px 12px;

    h3 {
      font-size: 1.2rem;
    }
  }

  .processing-background-effects {
    .concentric-waves .wave {
      &.wave-1 { width: 80px; height: 80px; margin: -40px 0 0 -40px; }
      &.wave-2 { width: 120px; height: 120px; margin: -60px 0 0 -60px; }
      &.wave-3 { width: 160px; height: 160px; margin: -80px 0 0 -80px; }
      &.wave-4 { width: 200px; height: 200px; margin: -100px 0 0 -100px; }
    }
  }
}
